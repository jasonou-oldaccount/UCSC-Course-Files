<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.messiah.homework2.MainActivity"
    android:fillViewport="true"
    android:background="#9a80e5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/stateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"/>

        <TextView
            android:layout_below="@id/stateName"
            android:id="@+id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/elevation"
            android:layout_below="@id/cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elevation: " />

        <TextView
            android:layout_marginTop="-20dp"
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="70sp"/>

        <TextView
            android:id="@+id/relativeHumidity"
            android:layout_below="@id/elevation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relative Humidity: " />

        <TextView
            android:id="@+id/windSpeedAverage"
            android:layout_below="@id/relativeHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind Speed Average: " />

        <TextView
            android:id="@+id/windSpeedGusts"
            android:layout_below="@id/windSpeedAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind Speed Gusts: " />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@id/temperature" >


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon"/>

            <TextView
                android:id="@+id/weather"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textSize="30sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/getWeather"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Get Weather Conditions"
            android:background="@drawable/click_button"/>

    </RelativeLayout>

</ScrollView>
